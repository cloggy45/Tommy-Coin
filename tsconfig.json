{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "."
  },
  "include": ["."],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
